
menu "File" {
	action "Save" {[winfo toplevel %W] save} <<Save>>
	separator
	action "Close" {[winfo toplevel %W] close} <<Close>>
}
menu "Add" {
	action "New action" {[winfo toplevel %W] new action}
	action "New radio" {[winfo toplevel %W] new radio}
	action "New check" {[winfo toplevel %W] new check}
	action "New separator" {[winfo toplevel %W] new separator}
	action "New label" {[winfo toplevel %W] new label}
	action "New widget" {[winfo toplevel %W] new widget}
	action "New tool" {[winfo toplevel %W] new tool}
}
menu "Edit" {
	action "Move up" {[winfo toplevel %W] move up} <<Up>>
	action "Move down" {[winfo toplevel %W] move down} <<Down>>
	separator
	action "Copy" {[winfo toplevel %W] copy} <<Copy>>
	action "Cut" {[winfo toplevel %W] cut} <<Cut>>
	action "Paste" {[winfo toplevel %W] paste} <<Paste>>
	action "Delete" {[winfo toplevel %W] delete} <Delete>
}
menu "Help" {
	action "ToolbarEditor" {Classy::help classy_toolbareditor} <<Help>>
	separator
	action "ClassyTcl" {Classy::help ClassyTcl} <<HelpClassyTcl>>
	action "Help" {Classy::help classy_help} <<HelpHelp>>
}